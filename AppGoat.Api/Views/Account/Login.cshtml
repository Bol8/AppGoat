
@model AppGoat.Api.Models.Login.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div>
    @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h4>Iniciar sesión.</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-12">
                <div style="text-align: left"> @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })</div>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm", placeholder = "Usuario" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div style="text-align: left"> @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm", placeholder = "Contraseña", style = "margin-bottom:5px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <div class="checkbox" style="text-align: left; padding-top: 0">
                    @Html.CheckBoxFor(m => m.RememberMe, new { style = "margin-left:1px;" })
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>

            @*<div class="col-md-6">
                    @Html.ActionLink("¿Olvidaste la contraseña?", "ForgotPassword", "Account")
                </div>*@
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Iniciar sesión" class="btn btn-default" style="margin-left: 1px" />
            </div>
        </div>
    }
</div>





